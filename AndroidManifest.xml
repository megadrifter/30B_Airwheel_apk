<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.kebye.android.gotwaybluetooth">
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name">
        <activity android:configChanges="keyboardHidden|orientation" android:launchMode="singleTop" android:name="com.example.android.BluetoothChat.StartPic">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="keyboardHidden|orientation" android:label="@string/main_title" android:launchMode="singleTop" android:name="com.example.android.BluetoothChat.BluetoothChat">
            <intent-filter>
                <action android:name="android.intent.action.MAINFuction"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="keyboardHidden|orientation" android:label="@string/advancedTitle" android:launchMode="singleTop" android:name="com.example.android.BluetoothChat.BluetoothAdvanced"/>
        <activity android:configChanges="keyboardHidden|orientation" android:label="@string/select_device" android:launchMode="singleTop" android:name="com.example.android.BluetoothChat.DeviceListActivity" android:theme="@android:style/Theme.Holo.Dialog"/>
    </application>
</manifest>
